{{ header }}<link type="text/css" href="view/stylesheet/pcode.css" rel="stylesheet" />
{{ column_left }} 
<div id="content">
    <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
       <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
    <div class="container-fluid">
      {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
      {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
      <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
           <ul class="nav nav-tabs" id="language">
              {% for language in languages %} 
              <li><a href="#language{{ language['language_id'] }}" data-toggle="tab"><img src="view/image/flags/{{ language['image'] }}" title="{{ language['name'] }}" /> {{ language['name'] }}</a></li>
              {% endfor %} 
            </ul>
            <div class="tab-content">
                {% for language in languages %} 
                  <div class="tab-pane"  id="language{{ language['language_id'] }}">
                  <fieldset>
                  <legend>Enter Your Data</legend>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ help_header }}">{{ text_header }}</span></label>
                      <div class="col-sm-5">
                       <textarea name="dynamic[{{ language['language_id'] }}][header]" placeholder="Ex: Check Shipping availability at your location" class="form-control">{{ dynamic[language['language_id']]['header'] }}</textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ help_message }}">{{ text_message }}</span></label>
                      <div class="col-sm-5">
                       <textarea name="dynamic[{{ language['language_id'] }}][message]" placeholder="Ex: Check Shipping availability at your location" class="form-control">{{ dynamic[language['language_id']]['message'] }}</textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ help_email }}">{{ text_email }}</span></label>
                      <div class="col-sm-5">
                       <textarea name="dynamic[{{ language['language_id'] }}][email]" placeholder="Ex: Submit you email address. We will update when we deliver to your postcode." class="form-control">{{ dynamic[language['language_id']]['email'] }}</textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-sort-order"><span data-toggle="tooltip" title="{{ help_fail }}">{{ text_fail }}</span></label>
                      <div class="col-sm-5">
                        <textarea name="dynamic[{{ language['language_id'] }}][fail]" placeholder="Ex: Sorry The Pincode Was not found in the pincode list" class="form-control">{{ dynamic[language['language_id']]['fail'] }}</textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="dynamic{{ language['language_id'] }}">
                        <span data-toggle="tooltip" title="{{ help_theme }}">{{ text_theme }}</span></label>
                      <div class="col-sm-5">
                        <input  name="dynamic[{{ language['language_id'] }}][theme]" value="{{ dynamic[language['language_id']]['theme'] }}" type="color" class="form-control" style="height:50px;">
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="dynamic{{ language['language_id'] }}">
                        <span data-toggle="tooltip" title="{{ help_font }}">{{ text_font }}</span></label>
                      <div class="col-sm-5">
                        <input  name="dynamic[{{ language['language_id'] }}][font]" value="{{ dynamic[language['language_id']]['font'] }}" type="color" class="form-control" style="height:50px;">
                      </div>
                    </div>
                </fielset>
                  </div>
                {% endfor %} 
                <fieldset>
                  <legend>Enable fields you want to show after postcode search</legend>
                 <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-pinstate"><span data-toggle="tooltip" title="{{ help_state }}">{{ text_state }}</span></label>
                  <div class="col-sm-5">
                    <select name="imdev_config_pinstate" id="input-pinstate" class="form-control">
                      {% if (imdev_config_pinstate) %} 
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %} 
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %} 
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-pinzone"><span data-toggle="tooltip" title="{{ help_zone }}">{{ text_zone }}</span></label>
                  <div class="col-sm-5">
                    <select name="imdev_config_pinzone" id="input-pinzone" class="form-control">
                      {% if (imdev_config_pinzone) %} 
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %} 
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %} 
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-pincity"><span data-toggle="tooltip" title="{{ help_city }}">{{ text_city }}</span></label>
                  <div class="col-sm-5">
                    <select name="imdev_config_pincity" id="input-pincity" class="form-control">
                      {% if (imdev_config_pincity) %} 
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %} 
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %} 
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-mail"><span data-toggle="tooltip" title="{{ help_mail }}">{{ text_mail }}</span></label>
                  <div class="col-sm-5">
                    <select name="imdev_config_pinemail" id="input-mail" class="form-control">
                      {% if (imdev_config_pinemail) %} 
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %} 
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %} 
                    </select>
                  </div>
                </div>
              </fieldset>
                <fieldset>
                  <legend>Enable the master features you need for your store</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="postcode-popup"><span data-toggle="tooltip" title="{{ help_popup_status }}">{{ text_popup_status }}</span></label>
                  <div class="col-sm-5">
                     <select name="imdev_config_postcodepopup" id="postcode-popup" class="form-control">
                      {% if (imdev_config_postcodepopup) %} 
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %} 
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %} 
                    </select>
                  </div>
                </div>
                </fieldset>
        </div>
      </form>
    </div></div>
</div>
