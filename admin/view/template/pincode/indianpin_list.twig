{{ header }} 
<link type="text/css" href="view/stylesheet/pcode.css" rel="stylesheet" />
{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ insert }}" data-toggle="tooltip" title="{{ button_insert }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
<div class="container-fluid">
  {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
    <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form">
      <table class="table table-bordered table-hover">
         <thead>
            <tr>
              <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
              <td class="left">{% if (sort == 'pincode') %} 
                <a href="{{ sort_pincode }}" class="{{ (order) }}">{{ pincode }}</a>
                {% else %} 
                <a href="{{ sort_pincode }}">{{ pincode }}</a>
                {% endif %}</td>
              <td class="center">{% if (sort == 'prepaid') %} 
                <a href="{{ sort_prepaid }}" class="{{ (order) }}">{{ prepaid }}</a>
                {% else %} 
                <a href="{{ sort_prepaid }}">{{ prepaid }}</a>
                {% endif %}</td>
              <td class="center">{% if (sort == 'reverse_pickup') %} 
                <a href="{{ sort_reverse_pickup }}" class="{{ (order) }}">{{ reverse_pickup }}</a>
                {% else %} 
                <a href="{{ sort_reverse_pickup }}">{{ reverse_pickup }}</a>
                {% endif %}</td>
              <td class="center">{% if (sort == 'repl') %} 
                <a href="{{ sort_repl }}" class="{{ (order) }}">{{ repl }}</a>
                {% else %} 
                <a href="{{ sort_repl }}">{{ repl }}</a>
                {% endif %}</td>
              <td class="center">{% if (sort == 'cod') %} 
                <a href="{{ sort_cod }}" class="{{ (order) }}">{{ cod }}</a>
                {% else %} 
                <a href="{{ sort_cod }}">{{ cod }}</a>
                {% endif %}</td>
			  <td class="center">{% if (sort == 'dispatch_center') %} 
                <a href="{{ sort_dispatch_center }}" class="{{ (order) }}">{{ dispatch_center }}</a>
                {% else %} 
                <a href="{{ sort_dispatch_center }}">{{ dispatch_center }}</a>
                {% endif %}</td>
			  <td class="center">{% if (sort == 'city') %} 
                <a href="{{ sort_city }}" class="{{ (order) }}">{{ city }}</a>
                {% else %} 
                <a href="{{ sort_city }}">{{ city }}</a>
                {% endif %}</td>
			  <td class="center">{% if (sort == 'state') %} 
                <a href="{{ sort_state }}" class="{{ (order) }}">{{ state }}</a>
                {% else %} 
                <a href="{{ sort_state }}">{{ state }}</a>
                {% endif %}</td>
			  <td class="center">{% if (sort == 'state_code') %} 
                <a href="{{ sort_state_code }}" class="{{ (order) }}">{{ state_code }}</a>
                {% else %} 
                <a href="{{ sort_state_code }}">{{ state_code }}</a>
                {% endif %}</td>
			  <td class="center">{% if (sort == 'sort_code') %} 
                <a href="{{ sort_sort_code }}" class="{{ (order) }}">{{ sort_code }}</a>
                {% else %} 
                <a href="{{ sort_sort_code }}">{{ sort_code }}</a>
                {% endif %}</td>
              <td class="center">{% if (sort == 'value_capping') %} 
                <a href="{{ sort_value_capping }}" class="{{ (order) }}">{{ value_capping }}</a>
                {% else %} 
                <a href="{{ sort_value_capping }}">{{ value_capping }}</a>
                {% endif %}</td>
              <td class="right">{{ column_action }}</td>
            </tr>
          </thead>
        <tbody>
          <tr class="filter">
              <td></td>
              <td><input type="text" name="filter_pincode" value="{{ filter_pincode }}" class="form-control" /></td>
              <td><input type="text" size="15" name="filter_prepaid" value="{{ filter_prepaid }}" class="form-control" /></td>
              <td><input type="text" size="15" name="filter_reverse_pickup" value="{{ filter_reverse_pickup }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_repl" value="{{ filter_repl }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_cod" value="{{ filter_cod }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_dispatch_center" value="{{ filter_dispatch_center }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_city" value="{{ filter_city }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_state" value="{{ filter_state }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_state_code" value="{{ filter_state_code }}" class="form-control" /> </td>
              <td><input type="text" size="15" name="filter_sort_code" value="{{ filter_sort_code }}" class="form-control" /> </td>
			  <td><input type="text" size="15" name="filter_value_capping" value="{{ filter_value_capping }}" class="form-control" /> </td>
              <td><button type="button" onclick="filter();" class="btn btn-primary"><i class="fa fa-search"></i> {{ button_filter }}</button></td>
            </tr>
          {% if (pins) %} 
          {% for pin in pins %} 
          <tr>
            <td style="text-align: center;">
              <input type="checkbox" name="selected[]" value="{{ pin['pincode'] }}"/>
             </td>
            <td class="left">{{ pin['pincode'] }}</td>
            <td class="center">{{ pin['prepaid'] }}</td>
            <td class="center">{{ pin['reverse_pickup'] }}</td>
            <td class="center">{{ pin['repl'] }}</td>
            <td class="center">{{ pin['cod'] }}</td>
            <td class="center">{{ pin['dispatch_center'] }}</td>
            <td class="center">{{ pin['city'] }}</td>
            <td class="center">{{ pin['state'] }}</td>
            <td class="center">{{ pin['state_code'] }}</td>
            <td class="center">{{ pin['sort_code'] }}</td>
            <td class="center">{{ pin['value_capping'] }}</td>
            <td class="center">{% for action in pin['action'] %} 
              <a href="{{ action['href'] }}" data-toggle="tooltip" title="{{ action['text'] }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
              {% endfor %}</td>
          </tr>
          {% endfor %} 
          {% else %} 
          <tr>
            <td class="text-center"  colspan="9">{{ text_no_results }}</td>
          </tr>
          {% endif %} 
        </tbody>
      </table>
    </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 
<script language="javascript">
function ajax_upload(){ 
  $('#excel_codpins').trigger('click');
}
</script>
<script type="text/javascript"><!--
function filter() {
/* filter url creation */
  url = 'index.php?route=pincode/indianpin&user_token={{ user_token }}';
  
  var filter_pincode = $('input[name=\'filter_pincode\']').val();

  if (filter_pincode) {
    url += '&filter_pincode=' + encodeURIComponent(filter_pincode);
  }
  
  var filter_prepaid = $('input[name=\'filter_prepaid\']').val();
  
  if (filter_prepaid) {
    url += '&filter_prepaid=' + encodeURIComponent(filter_prepaid);
  }
  
  var filter_reverse_pickup = $('input[name=\'filter_reverse_pickup\']').val();
  
  if (filter_reverse_pickup) {
    url += '&filter_reverse_pickup=' + encodeURIComponent(filter_reverse_pickup);
  }
  
  var filter_repl = $('input[name=\'filter_repl\']').val();
  
  if (filter_repl) {
    url += '&filter_repl=' + encodeURIComponent(filter_repl);
  }

  var filter_cod = $('input[name=\'filter_cod\']').val();
  
  if (filter_cod) {
    url += '&filter_cod=' + encodeURIComponent(filter_cod);
  }
  
  var filter_dispatch_center = $('input[name=\'filter_dispatch_center\']').val();
  
  if (filter_dispatch_center) {
    url += '&filter_dispatch_center=' + encodeURIComponent(filter_dispatch_center);
  } 

  var filter_city = $('input[name=\'filter_city\']').val();
  
  if (filter_city) {
    url += '&filter_city=' + encodeURIComponent(filter_city);
  }

  var filter_state = $('input[name=\'filter_state\']').val();
  
  if (filter_state) {
    url += '&filter_state=' + encodeURIComponent(filter_state);
  } 
  
  var filter_state_code = $('input[name=\'filter_state_code\']').val();
  
  if (filter_state_code) {
    url += '&filter_state_code=' + encodeURIComponent(filter_state_code);
  } 
  
  var filter_sort_code = $('input[name=\'filter_sort_code\']').val();
  
  if (filter_sort_code) {
    url += '&filter_sort_code=' + encodeURIComponent(filter_sort_code);
  } 
  
  var filter_value_capping = $('input[name=\'filter_value_capping\']').val();
  
  if (filter_value_capping) {
    url += '&filter_value_capping=' + encodeURIComponent(filter_value_capping);
  } 

  location = url;
}
</script> 
<script type="text/javascript"><!--
$('.navigation th:nth-child(1)').addClass('active'); 
$('#form input').keydown(function(e) {
  if (e.keyCode == 13) {
    filter();
  }
});</script> 